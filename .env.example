# Browser Automation Agent Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# Anthropic Claude API Configuration
# ==========================================
# Required for Claude Agent SDK
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# OpenRouter Configuration (Alternative)
# ==========================================
# OpenRouter provides Anthropic-compatible API for Claude Agent SDK
# Get your API key from: https://openrouter.ai/keys
# Models available at: https://openrouter.ai/models?order=newest
#
# To use OpenRouter instead of direct Anthropic API:
# 1. Uncomment the following 3 lines
# 2. Set ANTHROPIC_AUTH_TOKEN to your OpenRouter API key (sk-or-v1-...)
# 3. Leave ANTHROPIC_API_KEY empty to avoid conflicts

# ANTHROPIC_BASE_URL=https://openrouter.ai/api
# ANTHROPIC_AUTH_TOKEN=sk-or-v1-your-openrouter-api-key-here
# ANTHROPIC_API_KEY=

# ==========================================
# Model Configuration
# ==========================================
# Model tier mapping for agent hierarchy
# Planner agent model (default: claude-sonnet-4-20250514)
PLANNER_MODEL=claude-sonnet-4-20250514

# Sub-agent models (default: claude-haiku-4-20250514 for lightweight tasks)
DOM_ANALYZER_MODEL=claude-haiku-4-20250514
EXECUTOR_MODEL=claude-sonnet-4-20250514
VALIDATOR_MODEL=claude-haiku-4-20250514

# ==========================================
# Browser Configuration
# ==========================================
# Browser options (chrome, firefox, webkit - default: chrome)
BROWSER_TYPE=chrome

# Headless mode (true/false - default: false for visible browser per FR-001)
BROWSER_HEADLESS=false

# Browser viewport size
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

# Slow motion delay in ms (for debugging/demonstration)
# BROWSER_SLOW_MO=0

# ==========================================
# Iframe Configuration
# ==========================================
# Timeout per frame interaction attempt in ms (default: 10000 per FR-020)
# How long to wait for click/type_text operations to complete in each frame
IFRAME_TIMEOUT_MS=10000

# Maximum wait time for dynamically loaded iframes in ms (default: 5000 per FR-026)
# Some sites load iframes after initial page load
IFRAME_WAIT_MS=5000

# ==========================================
# Session Persistence
# ==========================================
# Directory for storing browser sessions (user data dir)
# Default: ~/.browser-agent/sessions
SESSIONS_DIR=.browser-sessions

# Session persistence (true/false - default: true per FR-023)
SESSION_PERSIST=true

# ==========================================
# Agent Behavior Configuration
# ==========================================
# Maximum iterations before giving up (default: 15 per FR-030)
MAX_ITERATIONS=15

# Retry count for temporary errors (default: 3 per FR-028)
MAX_RETRIES=3

# Delay between actions in ms (default: 500)
ACTION_DELAY=500

# Timeout for page load in ms (default: 30000)
PAGE_LOAD_TIMEOUT=30000

# ==========================================
# Security & Confirmation
# ==========================================
# Require confirmation for destructive actions (default: true per FR-019-021)
REQUIRE_CONFIRMATION=true

# Dangerous action keywords (comma-separated)
DANGEROUS_ACTIONS=delete,remove,send,purchase,buy,pay,submit,transfer

# ==========================================
# TUI Display Configuration
# ==========================================
# Rich TUI colors (blue/green/yellow per FR-003-005)
# Supports: standard, bright, or hex colors
COLOR_THOUGHT=blue
COLOR_ACTION=green
COLOR_RESULT=yellow

# Show timestamps in TUI (true/false)
SHOW_TIMESTAMPS=true

# ==========================================
# Logging & Debugging
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: stdout)
# LOG_FILE=browser-agent.log

# Enable verbose logging for Playwright
PLAYWRIGHT_DEBUG=false

# ==========================================
# Telegram Notifications (Optional)
# ==========================================
# Configure Ralph SpecKit Telegram notifications
# Get bot token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id
